        +menu
    button menu

template(name='menu')
    +first color=color isphone=isPhone
    +second color=color isphone=isPhone
    +third color=color isphone=isPhone

template(name='first')
    .menu.first.active(class=isphone style='{background-color: #{color}')
        ul.first header1
            li
                a(href='/amarillo/') amarillo
            li(next='second') rojo

